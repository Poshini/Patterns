#include<bits/stdc++.h>
using namespace std;

void pattern(string str, int len)
{
     
    for (int i = 0; i < len; i++)
    {
        int j = len -1 - i;
        for (int k = 0; k < len; k++)
        {
            if (k == i || k == j)
                cout << str[k];
            else
                cout << " ";
        }
        cout << endl;       
    }
}
int main ()
{
    string str;
    cout<<"Enter string: ";
    cin>>str;
    int len = str.size();
    pattern(str, len);
 
    return 0;
}

    OUTPUT
 Enter string: 12345
 1    5
  2  4
    3
  2  4
 1    5
